<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_settings_tv_item"
            android:text="@string/setting_memo_key"
            android:textSize="@dimen/text_size_settings_label"/>

        <EditText
            android:id="@+id/settings_memo_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="@dimen/padding_input_settings"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_settings_edit"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/save_settings_btn"
        style="@style/button_primary_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_button"/>

</LinearLayout>