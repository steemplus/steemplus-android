<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/wallet_info_label"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="@string/min_sbd"
        android:textSize="@dimen/text_size_wallet"
        android:textColor="@color/colorItemWalletInfoLabel"/>

    <TextView
        android:id="@+id/wallet_info_value"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/min_sbd"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_wallet"
        android:textColor="@color/colorItemWalletInfoValue"/>
</LinearLayout>